
<table class='shorttable'>
  <tr>
    <th>Client Name</th>
    <th>Check Date</th>
    <th>Delivery Number</th>
    <th>Check Number</th>
    <th>Bank Name</th>
    <th>Amount</th>
    <th>Employee Name</th>
    <th>Action</th>
  </tr>

<% @accounts.each do |account| %>
  <tr>
    <td><%= account.client_name %></td>
    <td><%= account.check_date.strftime("%B %d, %Y") %></td>
    <td><%= account.delivery_no %></td>
     <td><%= account.check_number %></td>
     <td><%= account.bank_name %></td>
    <td><%= account.amount %></td>
    <td><%= fullname(account.employee) %></td>
    <td>
    <%= link_to 'Edit', edit_account_path(account) %>
    <%= link_to 'Destroy', account, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

