<table class='shorttable'>
  <tr>
    <th>Name</th>
    <th>Category</th>
    <th>Supplier</th>
    <th>Descriptions</th>
    <th>Cost price</th>
    <th>Unit cost</th>
    <th>Quantity</th>
    <th> Action </th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.name %></td>
    <td><%= item.category %></td>
    <td><%= item.supplier.company_name unless item.supplier.blank? %></td>
    <td><%= item.descriptions %></td>
    <td class='alignright'><%= item.cost_price %></td>
    <td class='alignright'><%= item.unit_cost %></td>
    <td class='alignright'><%= item.quantity %></td>
    <td class='aligncenter'><%= link_to 'Show', item %>
    <%#= link_to 'Edit', edit_item_path(item) %>
    <%#= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

