<%= form_for(@sale) do |f| %>
  <% if @sale.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sale.errors.count, "error") %> prohibited this sale from being saved:</h2>

      <ul>
      <% @sale.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div id="mainLeftSales">

<table>
  <tr>

    <th><%= f.label :item_id, "Item Id" %></th>
    <th><%= f.label :quantity_purchased, "Quantity" %></th>
    <th><%= f.label :item_unit_price, "Unit Price" %></th>
    <th><%= f.label :discount_percent, "Percent Discount " %></th>
  </tr>

  <%= f.fields_for :sale_items do |builder| %>
    <%= render "sale_item_fields", :f => builder %>
  <% end %>
<tr id="AddItem">
    <td colspan='4'><%= link_to_add_fields "Add Item", f, :sale_items %></td>
  </tr>
</table>






</div>
<div id="mainRightSales">

  <div class="field">
    <%= f.label :customer_id %><br />
    <%= f.text_field :customer_id %>
  </div>

  <div class="field">
    <%= f.label :comments %><br />
    <%= f.text_area :comments, :rows => 3 %>
  </div>

  <div class="field">
    <%= f.label :payment_type %><br />
    <%= f.text_field :payment_type %>
  </div>
  <div class="field">
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>

